#!/usr/bin/env bash
set -e
if [[ ! -d "/home/else/ghq/github.com/elsbrock/hetzner-radar" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/else/ghq/github.com/elsbrock/hetzner-radar")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/else/ghq/github.com/elsbrock/hetzner-radar" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/else/ghq/github.com/elsbrock/hetzner-radar/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/else/ghq/github.com/elsbrock/hetzner-radar/.envrc" "/home/else/ghq/github.com/elsbrock/hetzner-radar/.direnv"/*.rc
